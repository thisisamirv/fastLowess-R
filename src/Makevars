TARGET_DIR = ../target
LIBDIR = $(TARGET_DIR)/release
STATLIB = $(LIBDIR)/libfastLowess.a

# Linking flags (substituted by configure)
PKG_LIBS = -L$(LIBDIR) -Wl,-u,R_init_fastLowess -Wl,-u,wrap__smooth -Wl,-u,wrap__smooth_streaming -Wl,-u,wrap__smooth_online -lfastLowess -Wl,--gc-sections

all: clean $(SHLIB)

$(SHLIB): $(STATLIB)

$(STATLIB):
	@echo "Reporting Rust compiler versions:"
	@cargo --version
	@rustc --version
	cargo build --release --manifest-path=../Cargo.toml --target-dir $(TARGET_DIR)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)


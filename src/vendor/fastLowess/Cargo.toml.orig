[package]
name = "fastLowess"
version = "0.2.1"
edition = "2024"
rust-version = "1.85.0"

# Metadata
description = "High-level, parallel LOWESS smoothing built on top of the lowess crate, with ndarray integration and rayon-based parallelism."
authors = ["Amir Valizadeh <thisisamirv@gmail.com>"]
license = "AGPL-3.0-or-later"
readme = "README.md"

# Links
repository = "https://github.com/thisisamirv/fastLowess"
documentation = "https://docs.rs/fastLowess"
homepage = "https://github.com/thisisamirv/fastLowess"

# Categories
keywords = ["lowess", "smoothing", "statistics", "regression", "bioinformatics"]
categories = ["science", "algorithms"]

# Build
include = [
    "src/**/*",
    "docs/**/*.svg",
    "Cargo.toml",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
]

[dependencies]
lowess = { version = "0.5", features = ["dev"] }
num-traits = { version = "0.2", default-features = false, features = ["libm"] }
ndarray = { version = "0.17.1", default-features = false }
rayon = { version = "1.11" }

[dev-dependencies]
approx = "0.5"

[features]
default = []
dev = []

[profile.release]
opt-level = 3
lto = true
codegen-units = 1

# Document all features
[package.metadata.docs.rs]
all-features = true
rustdoc-args = ["--cfg", "docsrs"]
